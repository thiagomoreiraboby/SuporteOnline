@model IEnumerable<WebApplication1.Models.Usuario>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo", "Create") | @Html.ActionLink("Voltar", "Index", "Clientes")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.usua_nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.usua_nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.usua_codigo }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.usua_codigo })
        </td>
    </tr>
}

</table>
