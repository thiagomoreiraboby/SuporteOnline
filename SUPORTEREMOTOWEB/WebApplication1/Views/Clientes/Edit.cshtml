@using System.Data.Entity.Core.Common.CommandTrees.ExpressionBuilder
@model WebApplication1.Models.Cliente

@{
    ViewBag.Title = "Cliente";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar Cliente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.clie_codigo)
        @Html.HiddenFor(model => model.clie_idvnc)
        @Html.HiddenFor(model => model.clie_status)
        @Html.HiddenFor(model => model.empr_codigo)
        @Html.HiddenFor(model => model.empresa)
        @Html.HiddenFor(model => model.usua_codigo)
        @Html.HiddenFor(model => model.usuario)

        <div class="form-group">
            @Html.LabelFor(model => model.clie_nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.clie_nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.clie_nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" >
            @Html.LabelFor(model => model.clie_obs, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.clie_obs, new { htmlAttributes = new { @class = "form-control", rows=10 } })
                @Html.ValidationMessageFor(model => model.clie_obs, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            @Html.LabelFor(model => model.grcl_codigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("grcl_codigo", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.grcl_codigo, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">

                    <input type="submit" value="Salvar" class="btn btn-default" />

                </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
